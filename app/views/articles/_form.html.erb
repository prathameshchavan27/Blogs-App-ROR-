<style>
  .styled-form {
    max-width: 600px;
    margin: 20px auto;
    padding: 24px;
    border: 1px solid #ccc;
    border-radius: 12px;
    background-color: #fafafa;
  }

  .form-group {
    margin-bottom: 16px;
  }

  .form-label {
    display: block;
    font-weight: bold;
    margin-bottom: 6px;
    color: #333;
  }

  .form-control {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #bbb;
    border-radius: 8px;
    font-size: 1rem;
  }

  .btn-submit {
    background-color: #007bff;
    color: #fff;
    padding: 10px 16px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: bold;
  }

  .btn-submit:hover {
    background-color: #0056b3;
  }

  .error-box {
    background-color: #ffe0e0;
    border: 1px solid #ff4d4d;
    padding: 12px 16px;
    margin-bottom: 20px;
    border-radius: 8px;
  }

  .error-box h3 {
    margin-top: 0;
    color: #cc0000;
  }

  .error-box ul {
    margin: 0;
    padding-left: 20px;
  }
</style>

<%= render 'shared/errors', obj: @article %>

<%= form_for @article, html: { class: 'styled-form' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category, class: 'form-label' %>
    <%= f.collection_select(:category_ids,Category.all, :id,:name, {prompt: "Select from the list below (can be empty)"},{multiple: true,size: 3}) %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Article', class: 'btn-submit' %>
  </div>
<% end %>
